{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@motions/core": [
        "../packages/core/src"
      ],
      "@motions/dom": [
        "../packages/dom/src"
      ],
      "@motions/react": [
        "../packages/react/src"
      ],
      "@motions/vue": [
        "../packages/vue/src"
      ]
    }
  },
  "include": [
    "src"
  ]
}